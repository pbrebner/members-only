doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header(class="header")
      h2(class="appName") Members Only 
      if (currentUser)
        a(href="/new-message", class="newMessageLink headerLink") Create New Message
        a(href="/log-out", class="logOutLink headerLink") Log Out 
      else
        a(href="/log-in", class="logInLink headerLink") Log In 
        a(href="/sign-up", class="signUpLink headerLink") Sign Up
    block content
    footer(class="footer") 
      div Developed by Patrick Brebner (Github Link)
