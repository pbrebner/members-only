extends layout

block content
  main.main
    h1 
      | Special club for 
      span(class="accentColor") members 
      | only
    div(class="appDescription") 
      p 
        span(class="accentColor") Non-members 
        | can only see titles and message contents 
      p 
        | Only 
        span(class="accentColor") members 
        | can see the author and date
    div(class="messages")
      each message in messages
        div(class="messageContainer")
          h3(class="messageTitle span2")= message.title 
          p(class="messageText span2")= message.message
          if (currentUser && currentUser.memberStatus === true)
            p(class="messageAuthor")= message.author.name
            p(class="messageDate right-justify")= message.timeStampFormatted
            if (currentUser.admin === true)
              a(href=`/remove-message/${message._id}` class="deleteMessage") Delete 